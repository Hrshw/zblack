<script>
    const methodList = document.querySelector('#method');
    const paymentForm = document.getElementById('paymentForm');

    // Get the div elements
    const creditCardDetails = document.querySelector('#card-details');
    const upiDetails = document.querySelector('#upi-details');
    const googlePayDetails = document.querySelector('#googlepay-details');

    // Add event listener to the ul element
    methodList.addEventListener('click', (event) => {
        // Get the clicked element's id
        const clickedId = event.target.parentElement.id;

        // Hide all div elements
        creditCardDetails.style.display = 'none';
        upiDetails.style.display = 'none';
        googlePayDetails.style.display = 'none';

        // Show the clicked element's corresponding div element
        if (clickedId === 'credit-card') {
            creditCardDetails.style.display = 'block';
        } else if (clickedId === 'mobilepayment') {
            upiDetails.style.display = 'block';
        } else if (clickedId === 'Gpay') {
            googlePayDetails.style.display = 'block';
        }
    });


    // Initialize Stripe with your publishable API key
    const stripe = Stripe('pk_test_51N2VNzSH1dLYBOto8UGrZmnzYopnBpl12OyFJa6Fx7WuUmM2SaTzNlTl6vp1eP5ZbGAUZ7TKRujxsrvybPMHXJKA00Ee9KhvPG');
var elements = stripe.elements();

var cardElement = elements.create('card');
cardElement.mount('#card-element');
var form = document.getElementById('paymentForm');
form.addEventListener('submit', function(event) {
  event.preventDefault();
  // Collect the customer's card details and create a token
  stripe.createToken(cardElement).then(function(result) {
    if (result.error) {
      // Inform the user if there was an error creating the token
      var errorElement = document.getElementById('card-errors');
      errorElement.textContent = result.error.message;
    } else {
      // Send the token to your server for processing
      stripeTokenHandler(result.token);
    }
  });
});


function stripeTokenHandler(token) {
  // Send the token to your server for processing
  fetch('/payment', {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json'
    },
    body: JSON.stringify({
      token: token.id
    })
  })
  .then(function(response) {
    // Handle the server response
  });
}




</script>



